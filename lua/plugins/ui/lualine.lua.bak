-- Shared configuration constants
local SEPARATORS = {
	component = { left = "", right = "" },
	section = { left = "", right = "" },
}

local PRETTY_PATH_PROVIDERS = { default = "base", "snacks_terminal", "toggleterm", "oil", "trouble", "dapui" }

local DISABLED_FILETYPES = {
	statusline = { "snacks_dashboard" },
	winbar = {
		"lazy",
		"mason",
		"help",
		"qf",
		"quickfix",
		"snacks_dashboard",
		"nvim-dap-view",
		"dap-view",
		"dap-view-term",
		"dap-repl",
		"terminal",
	},
	tabline = { "snacks_dashboard" },
}

local TABLINE_CONFIG = {
	lualine_a = {
		{
			"buffers",
			mode = 2,
			use_mode_colors = true,
			icons_enabled = true,
			section_separators = SEPARATORS.section,
			component_separators = { left = "┃", right = "┃" },
			show_filename_only = true,
			show_modified_status = true,
			symbols = { modified = "_󰷥", alternate_file = "", directory = " " },
			filetype_names = {
				oil = "",
				trouble = "Trouble",
				lazy = "Lazy",
				mason = "Mason",
				snacks_picker_input = "",
				snacks_picker_list = "󰙅",
				snacks_picker_preview = "",
				snacks_dashboard = "󰕮",
			},
			buffers_color = { active = "lualine_a_normal", inactive = "lualine_b_normal" },
		},
	},
	lualine_z = { "tabs" },
}

return {
	"nvim-lualine/lualine.nvim",
	dependencies = { "folke/noice.nvim", "cameronr/lualine-pretty-path", "nvim-tree/nvim-web-devicons" },
	event = "VeryLazy",
	init = function()
		vim.g.lualine_minimal = true
		vim.opt.showtabline = 0
	end,
	opts = {
		options = {
			theme = require("core.constants").APPEARANCE.THEME,
			component_separators = SEPARATORS.component,
			section_separators = SEPARATORS.section,
			globalstatus = true,
			disabled_filetypes = DISABLED_FILETYPES,
			always_divide_middle = true,
			refresh = { statusline = 1000, tabline = 2000, winbar = 3000 },
		},
		sections = {
			lualine_a = {
				{
					"mode",
					fmt = function(str)
						local mode_map = {
							NORMAL = "N",
							INSERT = "I",
							VISUAL = "V",
							["V-LINE"] = "VL",
							["V-BLOCK"] = "VB",
							COMMAND = "C",
							REPLACE = "R",
							SELECT = "S",
							TERMINAL = "T",
						}
						return mode_map[str] or str:sub(1, 1)
					end,
				},
			},
			lualine_b = { { "pretty_path", providers = PRETTY_PATH_PROVIDERS } },
			lualine_c = { "branch", { "diff", symbols = { added = " ", modified = " ", removed = " " } } },
			lualine_x = {
				{
					"diagnostics",
					symbols = { error = " ", warn = " ", info = " ", hint = " " },
					update_in_insert = false,
				},
				{
					function()
						local ok, noice = pcall(require, "noice")
						return ok and noice.api.status.search.get() or ""
					end,
					cond = function()
						local ok, noice = pcall(require, "noice")
						return ok and noice.api.status.search.has()
					end,
					color = { fg = "#ff9e64" },
				},
				{
					"selectioncount",
					fmt = function(str)
						return str ~= "" and "󰒅 " .. str or ""
					end,
				},
				{
					function()
						local ok, lazy = pcall(require, "lazy.status")
						return ok and lazy.updates() or ""
					end,
					cond = function()
						local ok, lazy = pcall(require, "lazy.status")
						return ok and lazy.has_updates()
					end,
					color = { fg = "#ff9e64" },
				},
			},
			lualine_y = { "progress" },
			lualine_z = { { "location", icon = "" } },
		},
		inactive_sections = {
			lualine_c = { { "pretty_path", providers = PRETTY_PATH_PROVIDERS } },
			lualine_x = { "location" },
		},
		tabline = {},
		extensions = { "lazy", "mason", "quickfix", "overseer" },
	},
	config = function(_, opts)
		require("lualine").setup(opts)
	end,
	keys = {
		{
			"<leader>ul",
			function()
				vim.g.lualine_minimal = not vim.g.lualine_minimal
				local opts = require("lazy.core.plugin").values(
					require("lazy.core.config").spec.plugins["lualine.nvim"],
					"opts",
					false
				)
				opts.tabline = vim.g.lualine_minimal and {} or vim.deepcopy(TABLINE_CONFIG)
				vim.opt.showtabline = vim.g.lualine_minimal and 0 or 2
				require("lualine").setup(opts)
				vim.cmd("redrawtabline")
				vim.cmd("redrawstatus!")
			end,
			desc = "Toggle Tabline",
		},
	},
}
