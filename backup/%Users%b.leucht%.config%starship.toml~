# ~/.config/starship.toml

# Don't print a new line at the start of the prompt
add_newline = false

# Configure the prompt format - shell indicator comes first
format = """
$shell\
$all\
$character"""

# Shell indicator configuration
[shell]
disabled = false
format = "[$indicator]($style) "
zsh_indicator = "zsh"
nu_indicator = "nu"
bash_indicator = "bash"
fish_indicator = "fish"
powershell_indicator = "pwsh"
unknown_indicator = "?"
style = "bold cyan"
