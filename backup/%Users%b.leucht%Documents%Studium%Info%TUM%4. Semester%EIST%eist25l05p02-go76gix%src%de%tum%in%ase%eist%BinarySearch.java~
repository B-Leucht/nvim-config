package de.tum.in.ase.eist;

import java.util.List;

public class BinarySearch implements SearchStrategy {

  @Override
  public int performSearch(List<Chapter> chapters, String name) {
    int i = this.binarySearch(chapters, name);
    if (i != -1) {
      Chapter chapter = chapters.get(i);
      return chapter.getPageNumber();
    }
    return -1;
  }

  private int binarySearch(List<Chapter> chapters, String name) {
    int i = 0;
    int j = chapters.size() - 1;
    while (i <= j) {
      int mid = (i + j) / 2;
      String chapterName = chapters.get(mid).getName();
      if (chapterName.compareTo(name) < 0) {
        i = mid + 1;
      } else if (chapterName.compareTo(name) > 0) {
        j = mid - 1;
      } else {
        return mid;
      }
    }
    return -1; // Not found
  }
}
